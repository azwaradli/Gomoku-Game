#:kivy 1.0

GridLayout:
	canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'background.jpg'
            size: self.size
            pos: self.pos
    GridLayout:
    	Label:
			center_x: root.center_x
	        top: root.center_y + 300
			padding: [5,5]
			text: '[color=FFFFFF]GOMOKU[/color] [color=F41D4E]ONLINE[/color]'
			markup: True
			font_size: '50sp'
		Label:
			center_x: root.center_x
	        top: root.center_y + 100
			padding: [5,5]
			text: '[color=F41D4E]Connection error, please try again.[/color]'
			markup: True
