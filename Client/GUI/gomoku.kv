#:kivy 1.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManager:
	transition: FadeTransition()
	GomokuLogin:
	GomokuRooms:

<GomokuRooms>:
	grid: main_canvas

	name: "room"
	GridLayout:
		id: main_canvas
		rows: 5
		GridLayout:
			id: rooms
			cols: 2
			Label:
				id: helloUser
				padding: [5,5]
				text: 'Hi, [color=F41D4E]'+ root.username +'[/color]'
				markup: True
				height: 50
				size_hint_y: None
			GridLayout:
				cols:2
				padding: [5,5]
				height: 50
				size_hint_y: None
				Button:
					text: 'New Room'
				Button:
					text: 'Logout'
					
